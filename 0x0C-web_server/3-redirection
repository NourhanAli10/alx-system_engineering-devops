#!/usr/bin/env bash

# Update the package list to ensure the latest versions are available
sudo apt-get update

# Install Nginx web server if not already installed
sudo apt-get install -y nginx

# Create a backup of the default Nginx configuration
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Configure Nginx to perform a 301 Moved Permanently redirection for /redirect_me
echo "
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location /redirect_me {
        return 301 http://example.com/new_page; # Change 'http://example.com/new_page' to your desired redirection URL
    }

    # Additional server configuration...
}" | sudo tee /etc/nginx/sites-available/default > /dev/null

# Test the Nginx configuration
sudo nginx -t

# Reload Nginx to apply the changes
sudo systemctl reload nginx

# Output a message indicating successful configuration
echo "Nginx has been configured for the 301 Moved Permanently redirection from /redirect_me to http://example.com/new_page."
